<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say Something test
</h4>

<div class="ui two column grid">

	<div class="twelve wide column">

		<div class="ui card fluid raised chatbox">
  			<div class="content" id="messages">

				<div class="ui feed" id="message-container">

					<%= render @messages %>
					
				</div>

			</div>

			<!-- this is the text box on the chat window --> 
			<div class="extra content">

				
				<%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
				
				    <div class="field">
				      	<div class="ui fluid icon input">
				      		<%= f.text_field :body %>
				      		<%= f.button '<i class="bordered inverted edit orange icon"></i>'.html_safe %>
					      	
					    </div>
				    </div>
			    <% end %>
				    
			  	

		


				
			</div>
		</div> <!-- this is the end of the content -->





	</div>




	<div class="four wide column">

		<div class="ui card fluid raised chatbox">
  			<div class="content">

				<div class="ui inverted vertical menu">
				  <a class="active item">
				    Home
				  </a>
				  <a class="item">
				    Messages
				  </a>
				  <a class="item">
				    Friends
				  </a>
				</div>

			</div>
		</div>

	</div>

</div>